<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_iced_tea"
            android:padding="5dp"
            android:id="@+id/main_food_image"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="5dp">
            <TextView
                android:id="@+id/main_food_nameFood"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/main_food_price"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorDark"
                android:textSize="15dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/main_food_status"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="15dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <ImageView
            android:layout_weight="1"
            android:src="@drawable/ic_minus_sign_inside_a_black_circle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/main_food_minus"/>
        <TextView
            android:layout_weight="1"
            android:text="10"
            android:layout_marginLeft="2dp"
            android:textSize="22dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorDark"
            android:id="@+id/main_food_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:src="@drawable/ic_plus_sign_in_a_black_circle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/main_food_plus" />
    </LinearLayout>
</android.support.v7.widget.CardView>